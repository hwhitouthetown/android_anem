<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.rouge.anem.Stage.NewStageActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
<ScrollView

    android:id="@+id/activity_new_stage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">
<LinearLayout
    tools:context="com.example.rouge.anem.Stage.NewStageActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intitule"
            android:textSize="30sp"
            android:textAlignment="center"
            android:paddingBottom="10sp"
            android:hint="Intitulé du stage" />

        <TextView
            android:text="Entreprise d'accueil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelEntreprise"
            android:textSize="18sp"
            android:paddingBottom="10sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEntreprise"
            android:textSize="14sp"
            android:hint="Sélectionner une entreprise"
            android:paddingBottom="10sp"/>
        <TextView
            android:text="Etat du stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelEtat"
            android:textSize="18sp"
            android:paddingBottom="10sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation='horizontal'
            android:id="@+id/choixEtat"
            android:paddingBottom="10sp">

        </RadioGroup>

        <TextView
            android:text="Description de la mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelDesc"
            android:textSize="18sp"
            android:paddingBottom="10sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDesc"
            android:textSize="14sp"
            android:hint="Description de la mission"
            android:paddingBottom="10sp"/>
        <com.example.rouge.anem.View.SearchCompetenceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/searchView"/>

</LinearLayout>
</ScrollView>
</RelativeLayout>